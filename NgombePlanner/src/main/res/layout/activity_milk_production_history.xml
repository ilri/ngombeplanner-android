<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MilkProcutionHistoryActivity">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="95">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/production_total_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,2,4">
                <TableRow
                    android:layout_height="36dp"
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/total_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>
                    <View
                        android:layout_height="36dp"
                        android:layout_width="1dp"
                        android:background="@color/pressed_mistro"/>
                    <TextView
                        android:id="@+id/total_cow_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>
                    <View
                        android:layout_height="36dp"
                        android:layout_width="1dp"
                        android:background="@color/pressed_mistro"/>
                    <TextView
                        android:id="@+id/total_quantity_tv"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>
                </TableRow>
                <TableRow
                    android:layout_height="4dp"
                    android:layout_width="match_parent">
                    <View
                        android:layout_height="1dp"
                        android:layout_width="fill_parent"
                        android:background="@color/pressed_mistro"
                        android:layout_span="5"/>
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pressed_mistro"
                android:layout_marginTop="20dp"/>
            <TableLayout
                android:id="@+id/production_history_tl"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:stretchColumns="0,2,4,6">
                <TableRow
                    android:layout_height="36dp"
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>
                    <View
                        android:layout_height="36dp"
                        android:layout_width="1dp"
                        android:background="@color/pressed_mistro"/>
                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>
                    <View
                        android:layout_height="36dp"
                        android:layout_width="1dp"
                        android:background="@color/pressed_mistro"/>
                    <TextView
                        android:id="@+id/cow_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>
                    <View
                        android:layout_height="36dp"
                        android:layout_width="1dp"
                        android:background="@color/pressed_mistro"/>
                    <TextView
                        android:id="@+id/quantity_tv"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"/>
                </TableRow>
                <TableRow
                    android:layout_height="4dp"
                    android:layout_width="match_parent">
                    <View
                        android:layout_height="1dp"
                        android:layout_width="fill_parent"
                        android:background="@color/pressed_mistro"
                        android:layout_span="7"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/back_b"
        android:layout_width="@dimen/back_button_width"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_weight="5"/>
</LinearLayout>
