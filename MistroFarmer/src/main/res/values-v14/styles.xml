<resources>

    <style name="Theme.Mistro" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_mistro</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Mistro</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mistro</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Mistro</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Mistro</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mistro</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_mistro</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_mistro</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mistro</item>


    </style>

    <style name="ActionBar.Solid.Mistro" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_mistro</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_mistro</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_mistro</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mistro</item>
    </style>

    <style name="ActionBar.Transparent.Mistro" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_mistro</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mistro</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mistro.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Mistro</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mistro</item>
    </style>

</resources>
